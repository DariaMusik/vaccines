            <div class="d-flex flex-align-end">
                <a class="nav-link active accent" aria-current="page" href="/registration-pl">Rejestracja</a>
                <a class="nav-link active accent" aria-current="page" href="/login-pl">Logowanie</a>

                <a class="nav-link active accent" href="/adddata-en">EN</a>
                <p class="nav-link line">|</p>
                <a class="nav-link active accent" href="/adddata-pl">PL</a>
            </div>
          </div>
        </div>
    </nav>

    <div class="container">
        <div class="adddata-form">
            <div class="main-div add-data">
                <div class="panel">
                    <h2>Dodanie danych</h2>
                    <hr/>
                </div>
                <form method="post" action="addNewNotificationPL" id="Login">
                    <div class="form-fild-group">
                        <input type="text" class="fild" id="inputAge" name="age" placeholder="Wiek:">
                    </div>
                    <div class="form-fild-group">
                        <select class="fild" id="inputSex" name="sex">
                            <option value="" disabled selected hidden>Płeć</option>
                            <option value="F">Kobieta</option>
                            <option value="M">Mężczyzna</option>
                        </select><br>
                    </div>
                    <div class="form-fild-group">
                        <textarea id="inputAbode" name="state" class="form-control-textarea" placeholder="Miejsce zamieszkania:" rows="3"></textarea>
                    </div>
                    <div class="form-fild-group">
                        <textarea id="inputSymptoms" name="description_of_symptoms" class="form-control-textarea" placeholder="Opis symptomów, działań niepożądanych, :" rows="10"></textarea>
                    </div>
                    <div class="form-fild-group">
                       <select class="fild" id="type_of_vaccines" name="type_of_vaccines">
                          <option value="" disabled selected hidden>Rodzaj szczepionki</option>
                          <option value="PFIZER\BIONTECH">Pfizer</option>
                          <option value="MODERNA">Moderna</option>
                          <option value="ASTRAZENEKA">AstraZeneka</option>
                          <option value="JOHNSON&JOHNSON">Johnson & Johnson</option>
                       </select>
                    </div>
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                    <button type="submit" class="button">Zapisz</button>
                </form>
            </div>
        </div>
    </div>
 </body>
</html>